@model Invento.Areas.SiteAdmin.Models.Country

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSiteAdmin.cshtml";
}
 
<form asp-action="Create">
    <div class="form-horizontal">
      

        <div class="well" style="padding-bottom:5px">
            <div class="row">
                <span style="font-family:'Times New Roman', Times, serif ; font-weight:bolder ; font-size:x-large ; margin-left:15px">Countries</span>
                <a asp-controller="Countries" asp-action="Index" class="btn btn-primary pull-right" style="margin-right:55px">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary pull-right" style="margin-right:20px" />
            </div>
        </div>      


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ISO" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ISO" class="form-control" />
                <span asp-validation-for="ISO" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Iso3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Iso3" class="form-control" />
                <span asp-validation-for="Iso3" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NiceName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NiceName" class="form-control" />
                <span asp-validation-for="NiceName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumCode" class="form-control" />
                <span asp-validation-for="NumCode" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhoneCode" class="form-control" />
                <span asp-validation-for="PhoneCode" class="text-danger" />
            </div>
        </div>
       
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
