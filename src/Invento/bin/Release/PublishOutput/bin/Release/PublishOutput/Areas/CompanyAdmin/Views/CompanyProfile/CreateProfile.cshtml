@model Invento.Areas.CompanyAdmin.Models.Company.CompanyProfile

@{
    ViewData["Title"] = "Create Profile";
    Layout = "_LayoutCompanyAdmin";
}

<form asp-area="CompanyAdmin" asp-controller="CompanyProfile" asp-action="CreateProfile" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="well">
            <div class="row">
                <span style="font-family:'Times New Roman', Times, serif ; font-weight:bolder ; font-size:x-large ; margin-left:15px">Company Profile</span>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary pull-right" style="margin-right:55px">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary pull-right" style="margin-right:20px" />
            </div>
        </div>      

        <br /><br />
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    
                 <label class="col-md-3 control-label">Company Logo</label>
                    <div class="col-md-9">
                        <input type="file" id="File" name="File" accept="image/jpg, image/jpeg, image/png, image/tif" />
                        <p>Only .jpg , .jepg , .png , .TIF</p>                       
                    </div>
                </div>            
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ContactNumber" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AlternativeContact" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="AlternativeContact" class="form-control" />
                        <span asp-validation-for="AlternativeContact" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>
              
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="City" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CountryID" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                        <span asp-validation-for="CountryID" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CompanyWebsite" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="CompanyWebsite" class="form-control" />
                        <span asp-validation-for="CompanyWebsite" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Fax" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Fax" class="form-control" />
                        <span asp-validation-for="Fax" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OfficeContact" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="OfficeContact" class="form-control" />
                        <span asp-validation-for="OfficeContact" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>



        
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
