@model IEnumerable<Invento.Areas.SiteAdmin.Models.Currency>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSiteAdmin.cshtml";
}
 <p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISO)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISO)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CurrencyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CurrencyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CurrencyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
