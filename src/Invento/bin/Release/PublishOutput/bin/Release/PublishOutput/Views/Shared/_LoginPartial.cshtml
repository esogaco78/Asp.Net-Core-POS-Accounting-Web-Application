@using Microsoft.AspNetCore.Identity
@using Invento.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">




            <li>
                <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></a>
                <ul class="dropdown-menu">
                    @{
                        if (User.IsInRole("CompanyAdmin"))
                        {
                            <li><a asp-area="CompanyAdmin" asp-controller="CompanyProfile" asp-action="Profile">Company Profile</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="Register">Create User Accounts</a></li>
                            <li><a asp-area="CompanyAdmin" asp-controller="Home" asp-action="MyUsers">System Users</a></li>
                        }
                    }
                    <li role="separator" class="divider"></li>
                    <li><a asp-area="" asp-controller="Manage" asp-action="ChangePassword" >Change Password</a></li>
                    @*<li><a href="#">Something else here</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>*@
                </ul>
            </li>

            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                @*<li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>*@
                                <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
                            </ul>
                        }
