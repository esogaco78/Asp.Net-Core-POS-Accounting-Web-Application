  @model IEnumerable<Invento.Areas.Payment.Models.ChequePayment>

@{
    ViewData["Title"] = Localizer["Cheque Payment"];
    if (User.IsInRole("CompanyAdmin"))
    {
        Layout = "~/Views/Shared/_LayoutCompanyAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutCompanyUser.cshtml";
    }
}

<div class="well" style="padding-bottom:5px">
    <div class="row">
        <span style="font-family:'Times New Roman', Times, serif ; font-weight:bolder ; font-size:x-large ; margin-left:15px">@ViewData["Title"] Vouchers - BPV</span>        
        @if (User.IsInRole("CompanyAdmin") || User.IsInRole("Add Vouchers"))
        {
            <a asp-action="Create" class="btn btn-default pull-right" style="margin-right:20px"><span class="glyphicon glyphicon-plus"></span> @Localizer["Add New"] </a>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover" id="MyTable">
        <thead>
            <tr class="active">
                <th></th>
                <th>
                    @Localizer["ID"]
                </th>
                <th>
                    @Localizer["Date"]
                </th>
                <th>
                    @Localizer["Account Name"]
                </th>
                <th>
                    @Localizer["Cheque Number"]
                </th>
                <th>
                    @Localizer["Amount"]
                </th>
                <th>
                    @Localizer["Particulars"]
                </th>
                <th>
                    @Localizer["Bank Name"]
                </th>
                <th>
                    @Localizer["Status"]
                </th>
                <th>
                    @Localizer["Deposit Date"]
                </th>
                <th>
                    @Localizer["Mature Date"]
                </th>
                @if (User.IsInRole("Edit Vouchers") || User.IsInRole("CompanyAdmin"))
            {
                    <th>@Localizer["Edit"]</th>
            }
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script>
        function format(d) {            
            return '<div class="child-container">' +
                '<table cellpadding="5" cellspacing="0" border="0">' +                  
                '<tr>' +
                      '<td style="font-weight:bolder">Created By:</td>' +
                        '<td>' + d.createdBy + '</td>' +
                        '<td style="font-weight:bolder">Amount:</td>' +
                        '<td>' + d.amountInWords + '</td>' +                         
                    '</tr>' +

                '</table>' +
            '</div>';
        }
         
        $(document).ready(function () {
             
            var table = $('#MyTable').DataTable({
                 
                dom: 'lBfrtip',
                buttons: [
                    {
                        "extend": 'print',
                        "title": "Cheque Payments",
                        "text": "Print",
                        "autoPrint": true,
                        exportOptions: {
                            "columns": ':visible',
                        }
                    },
                    //'colvis',
                    {
                        "extend": 'excel',
                        "title": "Cheque Payments",
                        "text": "Excel",
                        exportOptions: {
                            "columns": ':visible',
                        }
                    },
                    //'colvis',
                    {
                        "extend": 'pdf',
                        "title": "Cheque Payments",
                        "text": "PDF",
                        exportOptions: {
                            "columns": ':visible',
                        }
                    },
                    'colvis',
                ],
                columnDefs: [{
                    //targets: -2,  // to by default hide some column                    
                    visible: false
                }],
               
                "ajax": {
                    "url": "/Payment/ChequePayments/LoadChequePayments",
                    "type": "GET",
                    "datatype":"json"
                },
                "columns": [
                     {
                         "class": 'details-control',
                         "orderable": false,
                         "data": null,
                         "defaultContent": ''
                     },
                     { "data": "chequePaymentID", "autpWidth": true },
                     { "data": "date", "autpWidth": true, "order": [0, 'desc'] },
                     { "data": "partyName", "autpWidth": true },
                     { "data": "chequeNumber", "autpWidth": true },
                     { "data": "amount", "autpWidth": true },
                     { "data": "particulars", "autpWidth": true },
                     { "data": "bankName", "autpWidth": true },                     

                     { "data": "status", "autpWidth": true },
                      
                     { "data": "dateOfDeposite", "autpWidth": true },
                     { "data": "dateOfMature", "autpWidth": true },                     
                       @if(User.IsInRole("Edit Banks") || User.IsInRole("CompanyAdmin"))
                {
                        <text>
                     {
                         "data": null,
                         "mRender": function (data, type, row) {
                             return $("<div />")
                                 .append($(" <div class='text-center'> <a class='btn btn-sm btn-default ' href='/Payment/ChequePayments/Edit?id=" + data.chequePaymentID + "'><span class='glyphicon glyphicon-pencil'></span></a>  </div> "))
                                 .html();
                         }
                     }
                      </text>
                }
                ],
                //"order": [[1, 'desc']]

                // to add color to Uncleared Column
                "rowCallback": function (row, data, index) {
                    if (data.status == "NotCleared") {
                        $('td:eq(8)', row).html('<b style="color:red">Uncleared</b>');
                    }
                },
            });
            // Add event listener for opening and closing details
            $('#MyTable tbody').on('click', 'td', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);

                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    // Open this row
                    row.child(format(row.data()), 'no-padding').show();
                    tr.addClass('shown');
                }
            });
        });
    </script>
}
